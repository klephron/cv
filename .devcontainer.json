{
  "image": "klephron/documentation-devcontainer:latest",
  "features": {
    "ghcr.io/devcontainers/features/sshd:latest": {},
    "ghcr.io/devcontainers/features/common-utils:latest": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": false,
      "installOhMyZshConfig": false,
      "upgradePackages": false
    },
    "ghcr.io/duduribeiro/devcontainer-features/neovim:latest": {},
    "ghcr.io/duduribeiro/devcontainer-features/tmux:latest": {
      "version": "3.4"
    },
    "ghcr.io/georgofenbeck/features/lazygit-linuxbinary:latest": {},
    "ghcr.io/devcontainers-extra/features/fzf:latest": {},
    "ghcr.io/devcontainers-extra/features/eza:latest": {},
    "ghcr.io/devcontainers-extra/features/ripgrep:latest": {}
  },
  "remoteUser": "ubuntu",
  "mounts": [
    "type=bind,source=${localEnv:HOME}/.ssh,target=/home/ubuntu/.ssh,readonly"
  ]
}
